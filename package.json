{
  "title": "英太郎ONLINE",
  "name": "eitaro_online",
  "version": "0.0.3",
  "description": "詳しくは https://github.com/Hinaser/eitaro-online/wiki をご確認ください。【注意】アドオン使用前に本アドオンの設定画面より「サービスURL」にちゃんとしたURLを入力しなおす作業が必要です。",
  "main": "index.js",
  "author": "Hinase",
  "engines": {
    "firefox": ">=38.0a1"
  },
  "license": "MIT",
  "keywords": [
    "jetpack"
  ],
  "preferences": [
    {
      "name": "preservehistory",
      "type": "bool",
      "title": "検索結果の履歴も合わせて表示する (表示先がサイドバーの場合のみ)",
      "value": true
    },
    {
      "name": "displaytarget",
      "type": "radio",
      "title": "検索結果の表示先",
      "options": [
        {
          "value": "tab",
          "label":  "タブ"
        },
        {
          "value": "sidebar",
          "label":  "サイドバー"
        },
        {
          "value": "panel",
          "label":  "ページ内パネル"
        }
      ],
      "value": "sidebar"
    },
    {
      "name": "alwaysopennewtab",
      "type": "bool",
      "title": "常に新しいタブに検索結果を表示する",
      "value": false
    },
    {
      "name": "panelposition",
      "type": "radio",
      "title": "パージ内パネルの表示位置",
      "options": [
        {
          "value": "center",
          "label": "中央"
        },
        {
          "value": "left",
          "label": "左"
        },
        {
          "value": "top",
          "label": "上"
        },
        {
          "value": "right",
          "label": "右"
        },
        {
          "value": "bottom",
          "label": "下"
        }
      ],
      "value": "right"
    },
    {
      "name": "servicename",
      "title": "サービス名",
      "type": "string",
      "value": "英太郎 ONLINE",
      "hidden":  true
    },
    {
      "name": "serviceurl",
      "title": "サービスURL",
      "type": "string",
      "value": "http://eow.エーエルシー.co.jp/search?q={0}"
    },
    {
      "name": "serviceselector",
      "title": "サービスセレクター",
      "type": "string",
      "value": "#resultsList > ul > li:first"
    },
    {
      "name": "servicedeselector",
      "title": "サービスデセレクター(検索結果から除外する子要素)",
      "type": "string",
      "value": ".fukidashi"
    },
    {
      "type": "control",
      "label": "削除",
      "name": "clearresult",
      "title": "履歴を全て削除する" 
    },
    {
      "type": "control",
      "label": "エクスポート",
      "name": "export",
      "title": "履歴をファイルにエクスポートする(HTMLフォーマット)" 
    },
    {
      "type": "control",
      "label": "ダンプ出力",
      "name": "dump",
      "title": "履歴データのダンプを取得する" 
    }
  ]
}
